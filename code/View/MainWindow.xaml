<Window x:Class="DLT645.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DLT645.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:DLT645.ViewModel"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        Title="调试精灵（内置 DLT645 规则解析引擎｜支持在配置文件中自由修改数据标识）（😎）"
        Width="1280"
        Height="720"
        MinWidth="640"
        MinHeight="360"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="GeneralFontFamily">
            <Setter Property="Control.FontFamily" Value="Couriew New, Microsoft YaHei UI" />
        </Style>
        <Style x:Key="GeneralSlabFontFamily">
            <Setter Property="Control.FontFamily" Value="../#Iosevka Fixed Slab, Microsoft YaHei UI" />
        </Style>
    </Window.Resources>

    <DockPanel>

        <!--  菜单栏  -->
        <Border Height="20"
                Background="GhostWhite"
                BorderBrush="Gainsboro"
                BorderThickness="1"
                DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件">
                    <MenuItem Header="新建" />
                    <MenuItem Header="打开" />
                    <MenuItem Header="保存" />
                    <Separator />
                    <MenuItem Click="MainWindow_AppRestart" Header="重启" />
                    <MenuItem Click="MainWindow_AppExit" Header="退出" />
                </MenuItem>
                <MenuItem Header="编辑" />
                <MenuItem Header="视图" />
                <MenuItem Header="窗口" />
                <MenuItem Header="工具" />
                <MenuItem Header="选项" />
                <MenuItem Header="帮助">
                    <MenuItem Click="MainWindow_DocClick" Header="如何使用" />
                    <MenuItem Click="MainWindow_AboutClick" Header="软件信息" />
                </MenuItem>
            </Menu>
        </Border>

        <!--  状态栏  -->
        <Border Height="20"
                Background="GhostWhite"
                BorderBrush="Gainsboro"
                BorderThickness="1"
                DockPanel.Dock="Bottom">
            <DockPanel HorizontalAlignment="Right">
                <TextBlock Width="200"
                           Margin="0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Courier New"
                           Text="{Binding ClockTimerStamp}"
                           TextAlignment="Center" />
                <TextBlock Width="200"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Courier New"
                           Text="{Binding ClockTimerUTC_0}"
                           TextAlignment="Center" />
                <TextBlock Width="200"
                           Margin="0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Courier New"
                           Text="{Binding ClockTimerUTC_8}"
                           TextAlignment="Center" />
            </DockPanel>
        </Border>

        <!--  活动栏  -->
        <Border Width="30"
                Background="GhostWhite"
                BorderBrush="Gainsboro"
                BorderThickness="1"
                DockPanel.Dock="Left" />

        <!--  主界面  -->
        <Border Background="GhostWhite"
                BorderBrush="Gainsboro"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <!--  侧边栏 左  -->
                    <Border Width="200"
                            Background="GhostWhite"
                            BorderBrush="Gainsboro"
                            BorderThickness="1"
                            Style="{StaticResource GeneralSlabFontFamily}">
                        <StackPanel Margin="10">
                            <ComboBox x:Name="PortNameComboBox"
                                      Height="20"
                                      Margin="2,5"
                                      IsEnabled="{Binding SerialPortModel.PortNameEnable}"
                                      ItemsSource="{Binding SerialPortModel.PortNameItemsSource}"
                                      MouseLeftButtonDown="MainWindow_PortName"
                                      PreviewMouseLeftButtonDown="MainWindow_PortName"
                                      SelectedItem="{Binding SerialPortModel.PortName}" />
                            <ComboBox x:Name="BaudRateComboBox"
                                      Height="20"
                                      Margin="2,5"
                                      IsEditable="True"
                                      IsEnabled="{Binding SerialPortModel.BaudRateEnable}"
                                      ItemsSource="{Binding SerialPortModel.BaudRateItemsSource}"
                                      SelectedItem="{Binding SerialPortModel.BaudRate}" />
                            <ComboBox x:Name="DataBitsComboBox"
                                      Height="20"
                                      Margin="2,5"
                                      IsEnabled="{Binding SerialPortModel.DataBitsEnable}"
                                      ItemsSource="{Binding SerialPortModel.DataBitsItemsSource}"
                                      SelectedItem="{Binding SerialPortModel.DataBits}" />
                            <ComboBox x:Name="StopBitsComboBox"
                                      Height="20"
                                      Margin="2,5"
                                      IsEnabled="{Binding SerialPortModel.StopBitsEnable}"
                                      ItemsSource="{Binding SerialPortModel.StopBitsItemsSource}"
                                      SelectedItem="{Binding SerialPortModel.StopBits}" />
                            <ComboBox x:Name="PariTypeComboBox"
                                      Height="20"
                                      Margin="2,5"
                                      IsEnabled="{Binding SerialPortModel.PariTypeEnable}"
                                      ItemsSource="{Binding SerialPortModel.PariTypeItemsSource}"
                                      SelectedItem="{Binding SerialPortModel.PariType}" />
                            <Button x:Name="PortAbleButton"
                                    Height="20"
                                    Margin="2,5"
                                    Click="MainWindow_PortAble"
                                    Content="{Binding SerialPortModel.PortStat}" />
                            <TextBlock Height="12"
                                       Margin="2,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="8">
                                （不打开也能用 发送时自动打开 三秒后自动关闭）
                            </TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        Height="20"
                                        Margin="2,5"
                                        Click="MainWindow_ReadAddr"
                                        IsEnabled="True">
                                    读取地址
                                </Button>
                                <Button Grid.Column="1"
                                        Height="20"
                                        Margin="2,5"
                                        Click="MainWindow_WritAddr"
                                        IsEnabled="True">
                                    设置地址
                                </Button>
                            </Grid>
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     FontWeight="Bold"
                                     Foreground="#FFCC0000"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     Text="{Binding DLT645CoreModel.CandidateAddr, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddrAA"
                                     Text="{Binding Global_CandidateAddrAA, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddrAA" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr99"
                                     Text="{Binding Global_CandidateAddr99, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr99" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr01"
                                     Text="{Binding Global_CandidateAddr01, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr01" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr02"
                                     Text="{Binding Global_CandidateAddr02, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr02" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr03"
                                     Text="{Binding Global_CandidateAddr03, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr03" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr04"
                                     Text="{Binding Global_CandidateAddr04, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr04" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     PreviewMouseLeftButtonDown="MainWindow_CandidateAddr05"
                                     Text="{Binding Global_CandidateAddr05, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_CandidateAddr05" />
                            <TextBox Height="20"
                                     Margin="2,5"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Courier New"
                                     IsEnabled="True"
                                     IsUndoEnabled="False"
                                     MaxLength="12"
                                     Text="{Binding DLT645CoreModel.SendFramePrmb, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="MainWindow_UpdtManualAsmb" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Height="20"
                                         Margin="2,5"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         FontFamily="Courier New"
                                         FontWeight="Bold"
                                         Foreground="Gray"
                                         IsEnabled="True"
                                         IsUndoEnabled="False"
                                         MaxLength="8"
                                         Text="{Binding Global_Password, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox Grid.Column="1"
                                         Height="20"
                                         Margin="2,5"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         FontFamily="Courier New"
                                         FontWeight="Bold"
                                         Foreground="Gray"
                                         IsEnabled="True"
                                         IsUndoEnabled="False"
                                         MaxLength="8"
                                         Text="{Binding Global_Operator, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Height="20"
                                         Margin="2,5"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         FontFamily="Courier New"
                                         FontWeight="Bold"
                                         IsEnabled="True"
                                         IsUndoEnabled="False"
                                         MaxLength="8"
                                         Text="{Binding Global_NewPasswordLevelDataId, UpdateSourceTrigger=PropertyChanged}" />
                                <ComboBox xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                          Grid.Column="1"
                                          Height="20"
                                          Margin="2,5"
                                          HorizontalContentAlignment="Center"
                                          IsEnabled="True"
                                          ItemsSource="{Binding Global_NewPasswordLevelItemsSource}"
                                          SelectedItem="{Binding Global_NewPasswordLevel}">
                                    <ComboBox.Resources>
                                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">0</sys:Double>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Height="20"
                                         Margin="2,5"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         FontFamily="Courier New"
                                         FontWeight="Bold"
                                         IsEnabled="True"
                                         IsUndoEnabled="False"
                                         MaxLength="8"
                                         Text="{Binding Global_NewPassword, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Grid.Column="1"
                                        Height="20"
                                        Margin="2,5"
                                        Click="MainWindow_PassWord_Alter"
                                        IsEnabled="True">
                                    更改密码
                                </Button>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                          Grid.Column="0"
                                          Height="20"
                                          Margin="2,5"
                                          HorizontalContentAlignment="Center"
                                          IsEnabled="True"
                                          ItemsSource="{Binding Global_NewBaudRateItemsSource}"
                                          SelectedItem="{Binding Global_NewBaudRate}">
                                    <ComboBox.Resources>
                                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">0</sys:Double>
                                    </ComboBox.Resources>
                                </ComboBox>
                                <Button Grid.Column="1"
                                        Height="20"
                                        Margin="2,5"
                                        Click="MainWindow_BaudRate_Alter"
                                        IsEnabled="True">
                                    更改速率
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
                <!--<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="35*" />
                    </Grid.RowDefinitions>
                    <GridSplitter Grid.Row="1"
                                  Height="5"
                                  HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="3"
                                  Height="5"
                                  HorizontalAlignment="Stretch" />
                    <Grid Grid.Row="0">
                        <Border Background="GhostWhite"
                                BorderBrush="Gainsboro"
                                BorderThickness="1">
                            <TabControl Name="tcSample" Margin="10">
                                <TabItem Header="　组帧　">
                                    <Border VerticalAlignment="Top" Style="{StaticResource GeneralSlabFontFamily}">
                                        <StackPanel>
                                            <DockPanel HorizontalAlignment="Left">
                                                <TextBox Width="120"
                                                         Height="20"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="#FFCC0000"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         MaxLength="12"
                                                         Text="{Binding ManualAsmb_AddrArea, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                                <TextBox Width="40"
                                                         Height="20"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="OrangeRed"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         MaxLength="2"
                                                         Text="{Binding ManualAsmb_CtrlArea, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                                <TextBox Width="80"
                                                         Height="20"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="Blue"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         MaxLength="8"
                                                         Text="{Binding ManualAsmb_DataIdx4, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                                <TextBox Width="80"
                                                         Height="20"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="Gray"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         MaxLength="8"
                                                         Text="{Binding ManualAsmb_Password, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                                <TextBox Width="80"
                                                         Height="20"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Center"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="Gray"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         MaxLength="8"
                                                         Text="{Binding ManualAsmb_Operator, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                                <Button Grid.Column="0"
                                                        Height="20"
                                                        MinWidth="40"
                                                        Margin="2,5"
                                                        Click="MainWindow_DataReverseType"
                                                        Content="{Binding DataReverseType}" />
                                                <TextBox Height="20"
                                                         MinWidth="160"
                                                         Margin="2,5"
                                                         HorizontalContentAlignment="Left"
                                                         VerticalContentAlignment="Center"
                                                         FontFamily="Courier New"
                                                         FontWeight="Bold"
                                                         Foreground="DarkGreen"
                                                         IsEnabled="True"
                                                         IsUndoEnabled="False"
                                                         Text="{Binding ManualAsmb_DataPart, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="MainWindow_UpdtManualAsmb" />
                                            </DockPanel>
                                            <TextBox Height="20"
                                                     Margin="2,5"
                                                     VerticalContentAlignment="Center"
                                                     IsEnabled="True"
                                                     PreviewMouseLeftButtonDown="TextBox_TextChanged"
                                                     Text="{Binding ManualAsmb_ToBeSend, UpdateSourceTrigger=PropertyChanged}"
                                                     TextChanged="TextBox_TextChanged"
                                                     UndoLimit="5" />
                                            <TextBox Height="20"
                                                     Margin="2,5"
                                                     VerticalContentAlignment="Center"
                                                     IsEnabled="True"
                                                     Text="{Binding ManualAsmb_ToBeSend_S33H, UpdateSourceTrigger=PropertyChanged}"
                                                     UndoLimit="5" />
                                            <TextBox Height="20"
                                                     Margin="2,5"
                                                     VerticalContentAlignment="Center"
                                                     IsEnabled="True"
                                                     Text="{Binding ManualAsmb_ToBeSend_S33H_all, UpdateSourceTrigger=PropertyChanged}"
                                                     UndoLimit="5" />
                                            <TextBox Height="20"
                                                     Margin="2,5"
                                                     VerticalContentAlignment="Center"
                                                     IsEnabled="True"
                                                     Text="{Binding ManualAsmb_ToBeSend_Reverse, UpdateSourceTrigger=PropertyChanged}"
                                                     UndoLimit="5" />
                                            <Button Width="100"
                                                    Height="25"
                                                    Margin="2,5"
                                                    Click="MainWindow_SendManualAsmb">
                                                发送
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </TabItem>
                                <TabItem FontFamily="Courier New" Header="　HEX/STR ">
                                    <Border VerticalAlignment="Top" Style="{StaticResource GeneralSlabFontFamily}">
                                        <StackPanel>
                                            <TextBox Height="50"
                                                     Margin="2,5"
                                                     IsEnabled="True"
                                                     Text="{Binding Convert_HexToString_Hex, UpdateSourceTrigger=PropertyChanged}"
                                                     UndoLimit="5" />
                                            <TextBox Height="50"
                                                     Margin="2,5"
                                                     IsEnabled="True"
                                                     Text="{Binding Convert_HexToString_String, UpdateSourceTrigger=PropertyChanged}"
                                                     UndoLimit="5" />
                                        </StackPanel>
                                    </Border>
                                </TabItem>
                                <TabItem FontFamily="Courier New" Header="　Epoch ">
                                    <Border VerticalAlignment="Top" Style="{StaticResource GeneralSlabFontFamily}">
                                        <DockPanel>
                                            <StackPanel Width="Auto" HorizontalAlignment="Left">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Width="200">
                                                        <wfi:WindowsFormsHost Margin="2,5" FontFamily="Courier New">
                                                            <wf:DateTimePicker x:Name="EpochDateTimePickerUTC"
                                                                               CustomFormat="yyyy-MM-dd HH:mm:ss"
                                                                               Format="Custom"
                                                                               ShowUpDown="True" />
                                                        </wfi:WindowsFormsHost>
                                                    </Border>
                                                    <Button Grid.Column="1"
                                                            Width="200"
                                                            Height="20"
                                                            Margin="2,5"
                                                            HorizontalContentAlignment="Center"
                                                            VerticalContentAlignment="Center"
                                                            Content="将左侧作为世界时间－转成－时间戳"
                                                            PreviewMouseLeftButtonUp="MainWindow_EpochConverter_UtcToTimeStamp" />
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Width="200">
                                                        <wfi:WindowsFormsHost Margin="2,5" FontFamily="Courier New">
                                                            <wf:DateTimePicker x:Name="EpochDateTimePickerLocal"
                                                                               CustomFormat="yyyy-MM-dd HH:mm:ss"
                                                                               Format="Custom"
                                                                               ShowUpDown="True" />
                                                        </wfi:WindowsFormsHost>
                                                    </Border>
                                                    <Button Grid.Column="1"
                                                            Width="200"
                                                            Height="20"
                                                            Margin="2,5"
                                                            HorizontalContentAlignment="Center"
                                                            VerticalContentAlignment="Center"
                                                            Content="将左侧作为本地时间－转成－时间戳"
                                                            PreviewMouseLeftButtonUp="MainWindow_EpochConverter_LocalToTimeStamp" />
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Grid.Column="0"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             HorizontalContentAlignment="Center"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             FontWeight="Bold"
                                                             Foreground="Blue"
                                                             MaxLength="8"
                                                             Text="{Binding EpochConverterTimeStamp_INT32, UpdateSourceTrigger=PropertyChanged}" />
                                                    <TextBox Grid.Column="1"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             HorizontalContentAlignment="Center"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             FontWeight="Bold"
                                                             Foreground="Blue"
                                                             MaxLength="8"
                                                             Text="{Binding EpochConverterTimeStamp_UINT32, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Grid.Column="0"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             Text="{Binding EpochConverterTimeUtc_Max2038, UpdateSourceTrigger=PropertyChanged}" />
                                                    <TextBox Grid.Column="1"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             Text="{Binding EpochConverterTimeUtc_Max2106, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Grid.Column="0"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             Text="{Binding EpochConverterTimeLocal_Max2038, UpdateSourceTrigger=PropertyChanged}" />
                                                    <TextBox Grid.Column="1"
                                                             Width="200"
                                                             Height="20"
                                                             Margin="2,5,2,5"
                                                             VerticalContentAlignment="Center"
                                                             FontFamily="Courier New"
                                                             Text="{Binding EpochConverterTimeLocal_Max2106, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                            </StackPanel>
                                            <StackPanel Width="Auto" HorizontalAlignment="Left">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Button Grid.Column="0"
